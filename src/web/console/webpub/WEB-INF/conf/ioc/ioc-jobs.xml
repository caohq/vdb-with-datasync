							<property name="targetObject">
								<bean class="vdb.log.job.LogJob" />
							</property>
							<property name="targetMethod"
								value="execute" />
						</bean>
					</property>
					<property name="cronExpression"
						value="0/10 * * * * ?" />
				</bean>
				-->
			</list>
		</property>
	</bean>
</beans>